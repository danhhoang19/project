<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context="com.example.viet_anh" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/general_tile" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="40dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/common_signin_btn_icon_pressed_light" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Quan ly tai khoan"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@color/general_tile" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="40dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/common_signin_btn_icon_pressed_light" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Cập nhật bài học mới"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="0.00"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:weightSum="4" >

        <RelativeLayout
            android:id="@+id/taCoBan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/general_tile" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="40dp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:src="@drawable/common_signin_btn_icon_pressed_light" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#00F2FF" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"
                android:text="@string/textCb"
                android:textColor="#00F2FF" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:text="" />

        <RelativeLayout
            android:id="@+id/taGiaoTiep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/general_tile" >

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="40sp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:src="@drawable/common_signin_btn_icon_pressed_dark" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#E60000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"
                android:text="Tiếng Anh Giao Tiếp"
                android:textColor="#FF00C0" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_weight="0.00"
        android:paddingBottom="5dp"
        android:weightSum="4" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/general_tile" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="40dp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:src="@drawable/common_signin_btn_icon_pressed_light" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#00F2FF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView4"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:text="Kỹ Năng"
                android:textColor="#00F2FF" />
        </RelativeLayout>

        <TextView
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:text="" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/general_tile" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="40sp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:src="@drawable/common_signin_btn_icon_pressed_dark" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#E60000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:text="Học &amp; Chơi"
                android:textColor="#FF00C0" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_weight="0.00"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:weightSum="4" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/general_tile" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="40dp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:src="@drawable/common_signin_btn_icon_pressed_light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#00A2FF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"
                android:text="Kinh Nghiệm Học Tập"
                android:textColor="#00F2FF" />
        </RelativeLayout>

        <TextView
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:text="" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/general_tile" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="40sp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:src="@drawable/common_signin_btn_icon_pressed_dark" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#E60000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:text="Ngữ Pháp"
                android:textColor="#FF00C0" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>